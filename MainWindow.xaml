<Window x:Class="HW_05.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HW_05"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300" Margin="1">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom">
            <TextBox x:Name="AllTable"/>
            <Button Content="Фамилии и Имена" Click="ShowName"/>
            <Button Content="Фамилии и Возраст" Click="ShowAge"/>
            <Button Content="Фамилии и Характеристики" Click="ShowCharacter"/>
            <Button Content="Фамилии и Штат проживания" Click="ShowState"/>
            <Button Content="Горда" Click="ShowCities"/>
            <Button Content="3 старейших города" Click="ShowOldestCities"/>
        </StackPanel>
        <DataGrid x:Name="dgMain"/>
    </DockPanel>
</Window>
